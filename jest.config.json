{
    "preset": "ts-jest",
    "testEnvironment": "node",
    "transform": {
        "^.+\\.{ts|tsx}?$": [
            "ts-jest",
            {
                "tsconfig": "tsconfig.json",
                "diagnostics": false
            }
        ]
    },
    "testMatch": [
        "**/__tests__/**/*.ts",
        "**/?(*.)+(spec|test).ts"
    ],
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
    "moduleNameMapper": {
        "^@/(.*)$": "<rootDir>/src/$1"
    },
    "modulePathIgnorePatterns": [
        "<rootDir>/dist/",
        "<rootDir>/node_modules/"
    ],
    "transformIgnorePatterns": [
        "C:\\\\Users\\\\WackyMachine\\\\Documents\\\\GitHub\\\\Cloud-App\\\\tests\\\\weatherAlarm\\.test\\.ts"
    ],
    "extensionsToTreatAsEsm": [".ts"]
}